<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="32dp"
    android:paddingHorizontal="20dp"
    tools:context=".EmailVerifyActivity">

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:scaleType="center"
        android:paddingRight="2dp"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_indicator_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/indicator_back"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Введите код из E-mail"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:textColor="@color/colorTextPrimary"
            android:textSize="17dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/editTextPIN1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:maxLength="1"
                android:textColorHighlight="#00FFFFFF"
                android:selectAllOnFocus="true"
                android:cursorVisible="false"
                android:gravity="center"
                android:textSize="20sp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textColor="@color/colorTextPrimary"
                android:background="@drawable/editiext_email_pin"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextPIN2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/editiext_email_pin"
                android:cursorVisible="false"
                android:fontFamily="@font/sf_pro_display_regular"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:selectAllOnFocus="true"
                android:textColor="@color/colorTextPrimary"
                android:textColorHighlight="#00FFFFFF"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextPIN3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:maxLength="1"
                android:selectAllOnFocus="true"
                android:cursorVisible="false"
                android:textColorHighlight="#00FFFFFF"
                android:gravity="center"
                android:textSize="20sp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textColor="@color/colorTextPrimary"
                android:background="@drawable/editiext_email_pin"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextPIN4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:maxLength="1"
                android:selectAllOnFocus="true"
                android:cursorVisible="false"
                android:textColorHighlight="#00FFFFFF"
                android:gravity="center"
                android:textSize="20sp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textColor="@color/colorTextPrimary"
                android:background="@drawable/editiext_email_pin"
                android:inputType="number" />

        </LinearLayout>
        
        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:text=""
            android:textSize="15sp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:textColor="@color/colorTextSecondary"/>

        <TextView
            android:id="@+id/correctPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:text=""
            android:textSize="15sp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:textColor="@color/colorAccent"/>
        
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>